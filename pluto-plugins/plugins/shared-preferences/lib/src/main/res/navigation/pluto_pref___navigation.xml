<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pluto_logger___navigation"
    app:startDestination="@id/listView">

    <fragment
        android:id="@+id/listView"
        android:name="com.pluto.plugins.preferences.ui.ListFragment"
        android:label="list"
        tools:layout="@layout/pluto_pref___fragment_list">
        <action
            android:id="@+id/openEditView"
            app:destination="@id/editView" />
        <action
            android:id="@+id/openFilterSettings"
            app:destination="@id/filterView" />
    </fragment>

    <dialog
        android:id="@+id/filterView"
        android:name="com.pluto.plugins.preferences.ui.filter.FilterFragment" />

    <dialog
        android:id="@+id/editView"
        android:name="com.pluto.plugins.preferences.ui.EditFragment"/>
</navigation>