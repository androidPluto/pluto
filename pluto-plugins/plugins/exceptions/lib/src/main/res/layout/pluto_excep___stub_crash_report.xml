<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/crashReportRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/pluto___margin_small"
    app:cardElevation="0dp"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pluto___red_05"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/pluto___margin_medium">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:drawableStart="@drawable/pluto_excep___ic_error"
            android:drawablePadding="@dimen/pluto___margin_mini"
            android:ellipsize="end"
            android:fontFamily="@font/muli_semibold"
            android:maxLines="1"
            android:text="@string/pluto_excep___crash_report_title"
            android:textColor="@color/pluto___red"
            android:textSize="@dimen/pluto___text_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:drawableLeft="@drawable/pluto_excep___ic_error"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pluto___margin_mini"
            android:ellipsize="end"
            android:fontFamily="@font/muli_light"
            android:text="@string/pluto_excep___crash_report_subtitle"
            android:textColor="@color/pluto___red_60"
            android:textSize="@dimen/pluto___text_xsmall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
