<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PlutoLIBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <!--        <item name="android:background">@drawable/pluto___bg_bottom_sheet</item>-->
    </style>

    <style name="PlutoLIBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.9</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/PlutoBottomSheet</item>
        <item name="dialogTheme">@style/PlutoBottomSheetDialogTheme</item>
    </style>

    <style name="PlutoLIChipTextStyle" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/muli_semibold</item>
    </style>

    <style name="PlutoLIFullScreenDialogStyle" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/pluto___dark</item>
        <item name="colorPrimaryDark">@color/pluto___dark</item>
        <item name="colorAccent">@color/pluto___dark</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>