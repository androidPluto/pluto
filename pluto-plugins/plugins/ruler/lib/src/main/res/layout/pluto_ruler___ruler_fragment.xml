<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.pluto.plugins.ruler.com.pluto.plugins.ruler.internal.RulerScaleView
        android:id="@+id/scaleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.pluto.plugins.ruler.com.pluto.plugins.ruler.internal.ControlsWidget
        android:id="@+id/leftControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pluto___margin_xlarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.pluto.plugins.ruler.com.pluto.plugins.ruler.internal.ControlsWidget
        android:id="@+id/rightControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pluto___margin_xlarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>