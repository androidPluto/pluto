<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pluto___margin_medium"
        android:background="@color/pluto___app_bg"
        app:cardCornerRadius="@dimen/pluto___margin_xsmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/pluto___section_color"
                android:fontFamily="@font/muli_semibold"
                android:paddingHorizontal="@dimen/pluto___margin_medium"
                android:paddingVertical="@dimen/pluto___margin_small"
                android:textColor="@color/pluto___text_dark_80"
                android:textSize="@dimen/pluto___text_xmedium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Share" />

            <TextView
                android:id="@+id/share_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/pluto___ic_share_as_text"
                android:drawableLeft="@drawable/pluto___ic_share_as_text"
                android:drawablePadding="@dimen/pluto___margin_xsmall"
                android:fontFamily="@font/muli_semibold"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/pluto___margin_medium"
                android:paddingVertical="@dimen/pluto___margin_small"
                android:text="@string/pluto___share_as_text"
                android:textColor="@color/pluto___text_dark_80"
                android:textSize="@dimen/pluto___text_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <View
                android:id="@+id/divider1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/pluto___margin_medium"
                android:layout_marginLeft="@dimen/pluto___margin_medium"
                android:background="@color/pluto___dark_05"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/share_text" />

            <LinearLayout
                android:id="@+id/share_file"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/pluto___ic_share_as_file"
                    android:drawableLeft="@drawable/pluto___ic_share_as_file"
                    android:drawablePadding="@dimen/pluto___margin_xsmall"
                    android:fontFamily="@font/muli_semibold"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/pluto___margin_medium"
                    android:paddingTop="@dimen/pluto___margin_small"
                    android:text="@string/pluto___share_as_file"
                    android:textColor="@color/pluto___text_dark_80"
                    android:textSize="@dimen/pluto___text_small" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pluto___margin_micro"
                    android:fontFamily="@font/muli_semibold"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/pluto___margin_vxlarge"
                    android:paddingLeft="@dimen/pluto___margin_vxlarge"
                    android:paddingEnd="@dimen/pluto___margin_medium"
                    android:paddingRight="@dimen/pluto___margin_medium"
                    android:paddingBottom="@dimen/pluto___margin_small"
                    android:text="@string/pluto___share_as_file_hint"
                    android:textColor="@color/pluto___text_dark_40"
                    android:textSize="@dimen/pluto___text_mini" />

            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/pluto___margin_medium"
                android:layout_marginLeft="@dimen/pluto___margin_medium"
                android:background="@color/pluto___dark_05"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/share_file" />

            <TextView
                android:id="@+id/share_copy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/pluto___ic_share_as_copy"
                android:drawableLeft="@drawable/pluto___ic_share_as_copy"
                android:drawablePadding="@dimen/pluto___margin_xsmall"
                android:fontFamily="@font/muli_semibold"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/pluto___margin_medium"
                android:paddingVertical="@dimen/pluto___margin_small"
                android:text="@string/pluto___share_as_copy"
                android:textColor="@color/pluto___text_dark_80"
                android:textSize="@dimen/pluto___text_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>