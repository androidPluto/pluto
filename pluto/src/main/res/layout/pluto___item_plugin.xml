<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/iconCard"
        android:layout_width="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_height="wrap_content"
        tools:layout_height="60dp"
        android:clipToPadding="true"
        android:backgroundTint="@color/pluto___white_80"
        android:background="@color/pluto___white_80"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="@dimen/pluto___margin_small"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:layout_width="@dimen/pluto___plugin_icon_dimen"
            android:layout_height="@dimen/pluto___plugin_icon_dimen" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muli_semibold"
        android:paddingHorizontal="@dimen/pluto___margin_small"
        android:paddingVertical="@dimen/pluto___margin_mini"
        android:textColor="@color/pluto___white_80"
        android:textSize="@dimen/pluto___text_xxsmall"
        android:gravity="center"
        android:breakStrategy="simple"
        android:maxLines="2"
        android:ellipsize="middle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconCard"
        tools:text="log tag" />

</androidx.constraintlayout.widget.ConstraintLayout>