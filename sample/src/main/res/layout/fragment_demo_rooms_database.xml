<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".functions.exceptions.DemoExceptionFragment">

    <TextView
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Sample 1 Database"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/db1CtaGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label1"
        app:singleLine="false"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/insertUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipStartPadding="10dp"
            app:chipEndPadding="10dp"
            android:text="Insert to User"
            android:textAppearance="@style/ChipTextStyle" />

        <com.google.android.material.chip.Chip
            android:id="@+id/insertAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipStartPadding="10dp"
            app:chipEndPadding="10dp"
            android:text="Insert to Admin"
            android:textAppearance="@style/ChipTextStyle" />

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Sample 2 Database"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/db1CtaGroup" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/db2CtaGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label2"
        app:singleLine="false"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/insertUser2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipStartPadding="10dp"
            app:chipEndPadding="10dp"
            android:text="Insert to User2"
            android:textAppearance="@style/ChipTextStyle" />

    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>