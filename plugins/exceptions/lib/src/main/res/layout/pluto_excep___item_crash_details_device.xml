<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/pluto___margin_medium">

    <TextView
        android:id="@+id/appLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pluto___section_color"
        android:fontFamily="@font/muli_semibold"
        android:lineSpacingExtra="6sp"
        android:paddingHorizontal="@dimen/pluto___margin_medium"
        android:paddingVertical="@dimen/pluto___margin_small"
        android:text="@string/pluto_excep___app_state_label"
        android:textColor="@color/pluto___text_dark_80"
        android:textSize="@dimen/pluto___text_small"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/appContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/appLabel" />

    <View
        android:id="@+id/appBottomDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pluto___dp_1"
        android:background="@color/pluto___divider_bg"
        app:layout_constraintTop_toBottomOf="@id/appContainer" />


    <TextView
        android:id="@+id/deviceLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pluto___section_color"
        android:fontFamily="@font/muli_semibold"
        android:layout_marginTop="@dimen/pluto___margin_medium"
        android:lineSpacingExtra="6sp"
        android:paddingHorizontal="@dimen/pluto___margin_medium"
        android:paddingVertical="@dimen/pluto___margin_small"
        android:text="@string/pluto_excep___device_label"
        android:textColor="@color/pluto___text_dark_80"
        android:textSize="@dimen/pluto___text_small"
        app:layout_constraintTop_toBottomOf="@+id/appBottomDivider" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/deviceContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/deviceLabel" />

    <View
        android:id="@+id/deviceBottomDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pluto___dp_1"
        android:background="@color/pluto___divider_bg"
        app:layout_constraintTop_toBottomOf="@id/deviceContainer" />
</androidx.constraintlayout.widget.ConstraintLayout>
