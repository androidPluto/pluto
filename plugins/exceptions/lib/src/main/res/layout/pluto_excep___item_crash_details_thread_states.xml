<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/pluto___margin_medium"
    tools:background="@color/pluto___white">

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pluto___section_color"
        android:drawableStart="@drawable/pluto_excep___ic_thread_traces"
        android:drawableLeft="@drawable/pluto_excep___ic_thread_traces"
        android:drawableEnd="@drawable/pluto_excep___ic_chevron_right"
        android:drawableRight="@drawable/pluto_excep___ic_chevron_right"
        android:drawablePadding="@dimen/pluto___margin_xsmall"
        android:fontFamily="@font/muli_bold"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:lineSpacingExtra="6sp"
        android:paddingHorizontal="@dimen/pluto___margin_medium"
        android:paddingTop="@dimen/pluto___margin_medium"
        android:text="@string/pluto_excep___thread_stack_traces_label"
        android:textColor="@color/pluto___text_dark_80"
        android:textSize="@dimen/pluto___text_small"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pluto___section_color"
        android:drawablePadding="@dimen/pluto___margin_xsmall"
        android:fontFamily="@font/muli"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:lineSpacingExtra="6sp"
        android:paddingStart="45dp"
        android:paddingTop="@dimen/pluto___margin_micro"
        android:paddingEnd="@dimen/pluto___margin_medium"
        android:paddingBottom="@dimen/pluto___margin_medium"
        android:text="@string/pluto_excep___thread_stack_traces_description"
        android:textColor="@color/pluto___text_dark_40"
        android:textSize="@dimen/pluto___text_xxsmall"
        app:layout_constraintTop_toBottomOf="@+id/label" />

</androidx.constraintlayout.widget.ConstraintLayout>